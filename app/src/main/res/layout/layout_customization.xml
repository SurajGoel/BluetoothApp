<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        android:navigationIcon="@mipmap/ic_back">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/button_selector"
                android:src="@mipmap/ic_power"
                android:layout_alignParentRight="true"
                android:onClick="Disconnect"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#455a64"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/btn_back">
        <RelativeLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#455a64"
            android:padding="6dp">
            <View
                android:id="@+id/cView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:id="@+id/apn"
                android:layout_toLeftOf="@+id/cView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#fff"
                android:layout_marginRight="2dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APN"
                    android:textStyle="bold"
                    android:textColor="#455a64"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/tv_apn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="airtelgprs.com"
                    android:textColor="#455a64"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_toRightOf="@+id/cView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#fff"
                android:layout_marginRight="2dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:id="@+id/host">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Host"
                    android:textStyle="bold"
                    android:textColor="#455a64"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/tv_host"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="192.168.43.1:8888"
                    android:textColor="#455a64"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"/></LinearLayout>
            <LinearLayout
                android:id="@+id/bid"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/apn"
                android:layout_toLeftOf="@+id/cView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#fff"
                android:layout_marginRight="2dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bluetooth Id"
                    android:textStyle="bold"
                    android:textColor="#455a64"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/tv_bluetooth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Faclon"
                    android:textColor="#455a64"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"/></LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_below="@+id/apn"
                android:layout_toRightOf="@+id/cView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#fff"
                android:layout_marginRight="2dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:id="@+id/device">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Name"
                    android:textStyle="bold"
                    android:textColor="#455a64"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/tv_device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faclon 1"
                    android:textColor="#455a64"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"/></LinearLayout>
            <RelativeLayout
                android:id="@+id/cal"
                android:layout_below="@+id/bid"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="4dp"
                android:background="#fff"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="10dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_calibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calibration"
                    android:textStyle="bold"
                    android:textColor="#455a64"
                    android:textSize="18dp"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:id="@+id/tv_m"
                    android:layout_below="@+id/tv_calibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m = 1.3"
                    android:textColor="#455a64"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/tv_y"
                    android:layout_below="@+id/tv_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c = 2.65"
                    android:textColor="#455a64"
                    android:textSize="14dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:id="@+id/tv_x"
                    android:layout_below="@+id/tv_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Y=1.3X + 2.65"
                    android:textColor="#455a64"
                    android:textSize="14dp"
                    android:layout_marginTop="3dp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/cyc"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/cal"
                android:layout_toLeftOf="@+id/cView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#fff"
                android:layout_marginRight="2dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cycle Time"
                    android:textStyle="bold"
                    android:textColor="#455a64"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/tv_cycle_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 minutes"
                    android:textColor="#455a64"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"/></LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_below="@+id/cal"
                android:layout_toRightOf="@+id/cView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#fff"
                android:layout_marginRight="2dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:id="@+id/reset">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset Password"
                    android:textStyle="bold"
                    android:textColor="#455a64"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="**********"
                    android:textColor="#455a64"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"/></LinearLayout>
        </RelativeLayout></ScrollView>
    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFffff"
        android:text="Back to Overview"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:background="@color/colorAccent"
        android:foreground="@drawable/button_selector"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:gravity="center"

        android:onClick="Overview"/>
</RelativeLayout>